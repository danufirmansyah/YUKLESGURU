<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_job">

    <include
        layout="@layout/toolbar3"
        android:id="@+id/toolbartext"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location_red"
            android:text=" Location"
            android:textSize="24dp"
            android:textColor="@color/red"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mc Donald, Jakarta"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_book"
            android:text=" Lesson"
            android:textSize="24dp"
            android:textColor="#b78c5f"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematika Grade 2"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senior High School"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_monetization_on_black_24dp"
            android:text=" Estimated income"
            android:textSize="24dp"
            android:textColor="@color/hitam"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 100.000"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_timer_black_24dp"
            android:text=" Duration"
            android:textSize="24dp"
            android:textColor="#ebaa16"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 hours"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:text=" Date"
            android:textSize="24dp"
            android:textColor="#61B872"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 - 12 - 2018"
            android:textSize="24dp"
            android:paddingLeft="80dp"/>

        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bluebawah"
            android:text="Take Job"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:id="@+id/pindah"
            android:onClick="Pindah2"/>

    </LinearLayout>


</RelativeLayout>